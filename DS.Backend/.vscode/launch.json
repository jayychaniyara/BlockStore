{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Nodemon Debug",
      "runtimeExecutable": "nodemon",
      "runtimeArgs": [
        "--watch",
        "src",
        "--exec",
        "node",
        "--inspect",
        "./node_modules/ts-node/dist/bin.js",
        "src/server.ts"
      ],
      "restart": true,
      "envFile": "${workspaceFolder}/.env",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    }
  ]
}
